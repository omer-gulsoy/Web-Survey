@model AppUserRegisterDto
@{
	ViewData["Title"] = "Kaydol";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="sign-in-form section-padding">
	<div class="container">
		<div class="row">

			<div class="col-lg-8 mx-auto col-12">

				<h1 class="hero-title text-center mb-5">Hesap Oluştur</h1>

				<div class="social-login d-flex flex-column w-50 m-auto">

					<a href="#" class="btn custom-btn social-btn mb-4">
						<i class="bi bi-google me-3"></i>

						Google ile devam et
					</a>

					<a href="#" class="btn custom-btn social-btn">
						<i class="bi bi-facebook me-3"></i>

						Facebook ile devam et
					</a>
				</div>

				<div class="div-separator w-50 m-auto my-5"><span>yada</span></div>

				<div class="row">
					<div class="col-lg-8 col-11 mx-auto">


						<form method="post">

							<div class="form-floating">
								<input type="text" asp-for="Name" class="form-control" placeholder="İsminiz" required="" oninput="isim(this)">

								<label for="name">İsminiz</label>
							</div>

							<div class="form-floating my-4">
								<input type="text" asp-for="Surname" class="form-control" placeholder="Soyisminiz" required="" oninput="isim(this)">

								<label for="surname">Soyisminiz</label>
							</div>

							<div class="form-floating my-4">
								<input type="text" asp-for="UserName" class="form-control" placeholder="T.C. Kimlik Numaranız" required="" oninput="tc(this)">

								<label for="userName">T.C. Kimlik Numaranız</label>
							</div>

							<div class="form-floating my-4">
								<input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numaranız" required="" oninput="telefon(this)">

								<label for="userName">Telefon Numaranız</label>
							</div>

							<div class="form-floating my-4">
								<input type="email" asp-for="Email" class="form-control" placeholder="E-Posta Adresiniz" required="">

								<label for="userName">E-Posta Adresiniz</label>
							</div>

							<div class="form-floating my-4">
								<input type="password" asp-for="Password" class="form-control" placeholder="Parolanız" required="">

								<label for="password">Parolanız</label>

							</div>

							<div class="form-floating">
								<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Parolanızı tekrar giriniz" required="">

								<label for="confirm_password">Parolanızı tekrar giriniz</label>
							</div>

							<div asp-validation-summary="ModelOnly"></div>
							<button type="submit" class="btn custom-btn form-control mt-4 mb-3">
								Hesap Oluştur
							</button>
							<p class="text-center">Hesabınız var mı? <a href="~/Login/Index">Giriş Yapınız.</a></p>

						</form>
					</div>
				</div>

			</div>

		</div>
	</div>
</section>